<fieldset>

  <vars><![CDATA[

    @var: "[a-zA-Z]+\S*"
    @com: "\s*,\s*"
    @=: "\s*=\s*"
    @quo: "[\"|']"
    @eol: ";.*?\n?+"

  ]]></vars>

  <rels><![CDATA[

    @program: "obj[key='program']"
    @shader: "obj[key='shader']"
    @vertex-shader: "obj[key='shader'] field[type='type'] option[key='vert']"
    @fragment-shader: "obj[key='shader'] field[type='type'] option[key='frag']"
    @vertex-shader-attr: "obj[key='vertex_shader_attribute']"
    @buffer: "obj[key='buffer']"

    #program relation to 2 shaders (one fragment and one vertex shader)
    obj-rel: required, @program, x1,
      @vertex-shader + ", " + @fragment-shader, x1

    #vertex shader relation to its attributes
    obj-rel: optional, @vertex-shader, x1, @vertex-shader-attr, x0-M

    #vertex shader attribute relation to a buffer object
    obj-rel: required, @vertex-shader-attr, x1, @buffer, x1

  ]]></rels>

  <objs>
    <obj key="texture">
      <lbl>Texture</lbl>
      <count>
        <min>0</min><max></max>
      </count>
      <fields>
        <field key="variable_name">
          <lbl>Variable Name</lbl>
          <type>variable_name</type>
          <rules>
            <rule>
              <match><![CDATA[
                @var
              ]]></match>
              <message>Must be non blank and begin with a letter</message>
            </rule>
          </rules>
        </field>
      </fields>
    </obj>

    <obj key="shader">
      <lbl>Shader</lbl>
      <count>
        <min>2</min><max></max>
      </count>
      <fields>
        <field key="variable_name">
          <lbl>Variable Name</lbl>
          <type>variable_name</type>
          <rules>
            <rule>
              <match><![CDATA[
                @var
              ]]></match>
              <message>Must be non blank and begin with a letter</message>
            </rule>
          </rules>
        </field>
        <field key="script_id">
          <lbl>Script ID</lbl>
          <type>text</type>
          <length>
            <min>1</min><max>70</max>
          </length>
          <unique />
          <rules>
            <rule>
              <match><![CDATA[
                @var
              ]]></match>
              <message>Must be non blank and begin with a letter</message>
            </rule>
          </rules>
        </field>
        <field key="type">
          <lbl>Shader Type</lbl>
          <type>select</type>
          <options canedit="false">
            <option key="vert">
              <lbl>Vertex</lbl>
            </option>
            <option key="frag">
              <lbl>Fragment</lbl>
            </option>
          </options>
        </field>
      </fields>
    </obj>

    <obj key="vertex_shader_attribute">
      <lbl>Vertex Shader Attribute</lbl>
      <count>
        <min>0</min><max></max>
      </count>
    </obj>

    <obj key="program">
      <lbl>Shader Program</lbl>
      <count>
        <min>1</min><max></max>
      </count>
      <fields>
        <field key="variable_name">
          <lbl>Variable Name</lbl>
          <type>variable_name</type>
          <rules>
            <rule>
              <match><![CDATA[
                @var
              ]]></match>
              <message>Must be non blank and begin with a letter</message>
            </rule>
          </rules>
        </field>
      </fields>
    </obj>

    <obj key="buffer">
      <lbl>Buffer</lbl>
      <count>
        <min>1</min><max></max>
      </count>
      <fields>
        <field key="variable_name">
          <lbl>Variable Name</lbl>
          <type>variable_name</type>
          <rules>
            <rule>
              <match><![CDATA[
                @var
              ]]></match>
              <message>Must be non blank and begin with a letter</message>
            </rule>
          </rules>
        </field>
      </fields>
    </obj>

  </objs>

</fieldset>
